{
   "manifest_version": 2,
   "name": "Nein Tabs",
   "description": "Say nein to too many tabs.",
   "version": "0.0.1",
   "author": "Christoph Gockel",
   "background": {
     "scripts": ["nein.js"],
     "persistent": false
   },
   "permissions": [
     "tabs"
   ],
   "browser_action": {
     "default_icon": {
       "16": "icons/16.png"
     }
   },
   "icons": {
     "16": "icons/16.png",
     "48": "icons/48.png",
     "128": "icons/128.png"
   }
}

